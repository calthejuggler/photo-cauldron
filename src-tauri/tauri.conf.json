{
	"build": {
		"beforeDevCommand": "bun run dev",
		"beforeBuildCommand": "bun run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "tinder-for-photos",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"path": {
				"all": true
			},
			"dialog": {
				"open": true
			},
			"protocol": {
				"asset": true,
				"assetScope": ["$APPDATA/*"]
			},
			"window": {
				"setFullscreen": true
			},
			"process": {
				"exit": true
			}
		},
		"windows": [
			{
				"title": "tinder-for-photos",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.calthejuggler.photo-cauldron",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		}
	}
}
